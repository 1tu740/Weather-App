<!DOCTYPE html>
<html lang="en">

<head>
    
    {{>headerlinks}}
</head>

<body>

    {{>navbar}}


    <div class="container-fluid main_header mid_body">
        <div class="row">
            <div class="col-md-10 col-12  mx-auto">

                <div class="main_content">
                    <form class="temp_form" id="tempform">
                        <input type="text" id="cityName" placeholder="Enter your city" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">

                    </form>
                </div>

                <div class="tempinformation">
                    <div class="top_layer">
                        <p id="day">tuesday</p>
                        
                    </div>
                    <div class="main_layer ">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="tempdegree">0</span> <sup>0</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    {{>footer}}


    <script src= "js/main.js"></script>
    <script>
        let day = document.getElementById('day');

        const getday = () =>{
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thrusday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            
            day.innerText = days;
        };

        getday();
    </script>

</body>

</html>