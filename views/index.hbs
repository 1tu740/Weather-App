<!DOCTYPE html>
<html lang="en">

<head>
  {{>headerlinks}}
</head>

<body>
    <!-- navbar -->

    {{>navbar}}

    <div class="container-fluid main_header mid_body">
        <div class="row">
            <div class="col-md-10 col-12  mx-auto" style="display: flex; padding-top: 10rem;">

                <!-- left haeader -->
                <div class="col-md-6 col-12 main_header_left">
                    <p>Welcome to weather app</p>
                    <h1>Get The Latest <span>Weather</span> Info of Your City</h1>
                    <a href="/weather"><button>check now</button></a>

                </div>

                <!-- right header -->
                <div class="col-md-6 col-12 main_header_right ">
                    <div id="carouselExample" class="carousel slide">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="images/bg1.jpg" class=" w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="images/bg2.jpg" class=" w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="images/bg3.jpg" class=" w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                </div>
            </div>

        </div>
    </div>
    

  {{>footer}}


</body>

</html>